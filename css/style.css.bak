body
{
	font-family: sans-serif;
}

ul
{
	list-style-type: none;
	margin: 0;
	padding: 0;
	overflow: hidden;
	background: #333;
}

label.logo
{
  color: white;
  font-weight: bold;
  float: left;
  display: block;
  text-align: center;
  padding: 14px 16px;
}

li
{
	float: left;
}

li a, .dropbtn
{
	display: inline-block;
	color: white;
	text-align: center;
	padding: 14px 16px;
	text-decoration: none;
}

li a:hover, .dropdown:hover .dropbtn
{
	background: #FFB6C1;
}

li.dropdown
{
	display: inline-block;
}

li.dropdown a, .dropbtn
{
	color: white;
}

.dropdown-content
{
	display: none;
	position: absolute;
	background: #333;
	min-width: 160px;
	box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2)
}

.dropdown-content a
{
	color: black;
	padding: 12px 16px;
	text-decoration: none;
	display: block;
	text-align: left;
}
.dropdown a:hover
{
	background: #FFB6C1;
}

.dropdown:hover .dropdown-content
{
	display: block;
}

